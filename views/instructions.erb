        font-style: italic;
      }

      #eventcodes td:nth-child(3n) {
        padding-right: 2em;
      }

      #suggestion-box-container {
        position: absolute;
        border: 1px solid #888;
        background: #def;
        border-radius: 0 0 5px 5px;
        overflow-y: auto;
      }

      #all-suggestions {
        width: 100%;
        margin-bottom: 0;
        font-size: 0.85rem;
      }

      #all-suggestions td:nth-child(3) {
        font-style: italic;
      }

      .suggestion {
        cursor: pointer;
        line-height: 1.6em;
      }

      .suggestion:hover {
        background-color: #eff;
      }
    </style>
  </head>
